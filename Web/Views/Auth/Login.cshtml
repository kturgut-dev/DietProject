@using DevExtreme.AspNet.Mvc
@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="row g-0">
    <div class="col-lg-6 d-none d-lg-flex justify-content-center align-items-center rounded-lg auth-h100">
        <div style="max-width: 25rem;">
            <div class="text-center mb-5">
                <i class="bi bi-bag-check-fill  text-primary" style="font-size: 90px;"></i>
            </div>
            <div class="mb-5">
                <h2 class="color-900 text-center">Hoşgeldiniz :)</h2>
            </div>
            <!-- Image block -->
            <div class="">
                <img src="~/assets/images/login-img.svg" alt="login-img">
            </div>
        </div>
    </div>

    <div class="col-lg-6 d-flex justify-content-center align-items-center border-0 rounded-lg auth-h100">
        <div class="w-100 p-3 p-md-5 card border-0 shadow-sm" style="max-width: 32rem;"> 
            <h4>Giriş Yap</h4>
            @if (ViewBag.ViewMessage != null)
            {
                <div class="alert alert-warning">@ViewBag.ViewMessage.ToString()</div>
            }
            <!-- Form -->
            <form class="row g-1 p-3 p-md-4" method="post">

                @(Html.DevExtreme().Form<DietProject.Core.Entities.User>()
                    .Items(items => {

                                        items.AddSimpleFor(m => m.EPosta)
                                            .Label(x=>x.Text("E-Posta").Location(FormLabelLocation.Top))
                                            .Editor(x=>x.TextBox().Mode(TextBoxMode.Email))
                                            .IsRequired(true);

                                        items.AddSimpleFor(m => m.Password)
                                            .Label(x=>x.Text("Şifre").Location(FormLabelLocation.Top))
                                            .Editor(x=>x.TextBox().Mode(TextBoxMode.Password))
                                            .IsRequired(true);

                                        items.AddButton()
                                            .ButtonOptions(x=>x.UseSubmitBehavior(true).Text("Giriş Yap"));
                    })
                    )
            </form>
            <span> Hesabınız yok mu? @Html.ActionLink("Kayıt Ol","Register","Auth")</span> 
            <!-- End Form -->
        </div>
    </div>
</div> 